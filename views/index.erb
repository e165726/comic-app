<div class="row">
  <aside class="col-sm-12">
    <div class="card">
      <article class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">新規登録</h4>
        <hr>
        <p class="text-success text-center">Some message goes here</p>
        <form action="/signup" method="POST">
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
              </div>
              <input type="text" name="account" id="account" class="form-control" placeholder="アカウント名">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-smile"></i> </span>
              </div>
              <input type="text" name="nickname" id="nickname" class="form-control" placeholder="ニックネーム">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-envelope-square"></i> </span>
              </div>
              <input type="email" name="email" id="email" class="form-control" placeholder="メールアドレス">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
              </div>
              <input type="password" name="password" id="password" class="form-control" placeholder="パスワード">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
              </div>
              <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="パスワード再入力">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fas fa-id-badge"></i> </span>
              </div>
              <input type="text" name="profile" id="profile" class="form-control" placeholder="プロフィール(任意)">
            </div> <!-- input-group.// -->
          </div> <!-- form-group// -->
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">登録する</button>
          </div> <!-- form-group// -->
        </form>
      </article>
    </div> <!-- card.// -->
  </aside>
</div>
