<body>
  <h2>ニックネーム: <%= @user['nickname'] %> @ <%= @user['account'] %></h2>
  <h3>プロフィール: <%= @user['profile'] %></h3>

  <% unless @comics.nil? %>
  <div class="card-deck">
    <% @comics.each do |comic| %>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title" style="text-align: center"><%= comic['title'] %></h4>
      </div>
      <% unless find_title_page(comic['id']).nil? %>
      <div style="text-align: center">
        <a href="/comics/<%= @user['account'] %>/<%= comic['id'] %>">
          <img src='<%= find_title_page(comic['id']) %>' width="300" height="200" alt="Card-image">
        </a>
      <% end %>
      </div>
      <div class="card-body">
        <p class="card-text">
          ストーリー: <br> <%= comic['bio'] %> <br>
          作成日: <%= comic['created_at'] %> <br>
          更新日: <%= comic['updated_at'] %> <br>
        </p>
        <div style="display:inline-flex">
          <form method="POST" action="/comics/<%= comic['id'] %>">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-outline-danger">削除</button>
          </form>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>

</body>